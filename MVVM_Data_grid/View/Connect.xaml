<UserControl x:Class="MVVM_Data_grid.View.Connect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Data_grid.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <TextBox Background="Yellow" FontSize="18" TextAlignment="Justify" Width="170" Height="30" x:Name="TbCon" Text="{Binding TcpViz}"/>
        <Button Background="LimeGreen" Foreground="White" FontSize="20" Content="Połącz" Width="170" Height="30"
        Command="{Binding ConnectCommand}"/>
        <Button Background="PaleVioletRed" Foreground="White" FontSize="20"  Content="Rozłacz" Width="170" Height="30" 
        Command="{Binding DisconnectCommand}" />

    </StackPanel>
</UserControl>
